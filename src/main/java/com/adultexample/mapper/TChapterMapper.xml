  <select id="selectChapterLearn" parameterType="int" resultMap="chapterlearn">
    select chapter.*,chapter2.id chapterid,chapter2.name chaptername,chapter2.orders chapterorders,subject.name subname,subject.id subid, case when question.num is null then 0 else question.num end num
	from
	(select * from t_chapter where subject_id = #{id} and parent_code = 0) chapter
	left join 
	(select * from t_chapter where subject_id = #{id} and parent_code != 0)chapter2
	on chapter.id = chapter2.parent_code
	left join
	(select count(1) num ,chapter_id from t_question group by chapter_id) question
	on chapter2.id = question.chapter_id
	left join
	(select * from t_subject) subject
	on chapter.subject_id = subject.id 
	order by orders,chapter2.orders
  </select>
