	select chapter1.*,chapter2.orders orders2,case when chapter2.name is null then'无上级章节' else chapter2.name end parname,subject.name subname from
	(select * from t_chapter)chapter1
	left join
	(select * from t_chapter)chapter2 on chapter1.parent_code = chapter2.id
	left join 
	(select * from t_subject)subject on chapter1.subject_id = subject.id
	where chapter1.name like '%${value}%' or subject.name like '%${value}%'
	order by orders ,orders2
  </select>
  
